<div class="page-head"> 
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title">New account Sign up </h1>               
                </div>
            </div>
        </div>
    </div>
    <!-- End page header -->


    <!-- register-area -->
    <div class="register-area" style="background-color: rgb(249, 249, 249);">
        <div class="container">

            <div class="col-md-6 col-md-offset-3">
                <div class="box-for overflow">
                    <div class="col-md-12 col-xs-12 register-blocks">
                        <h2>New account : </h2> 
                        <% include ./partials/messages %>
                        <form action="/users/register" method="post">
                            
                            <div class="form-group">
                                <label for="name">First Name</label>
                                <input type="name" class="form-control" id="name" name="name" value="<%= typeof name != 'undefined' ? name : '' %>" placeholder="First Name (required)" required>
                            </div>
                            <div class="form-group">
                                    <label for="lastname">Last Name</label>
                                    <input type="name" class="form-control" id="lastname" name="lastname" value="<%= typeof lastname != 'undefined' ? lastname : '' %>" placeholder="Other Names (required)" required>
                                </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="<%= typeof email != 'undefined' ? email : '' %>" required>
                            </div>
                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="password" class="form-control" id="password" name="password" value="<%= typeof password != 'undefined' ? password : '' %>" required>
                            </div>
                            <div class="form-group">
                                    <label for="password2">Confirm Password</label>
                                    <input type="password" class="form-control" id="password2" name="password2" value="<%= typeof password != 'undefined' ? password2 : '' %>" required>
                                </div>
                                <div class="row">
                                    <div class="col-md-3">
                                        Verify that you are a human
                                    </div>
                                    <div class="col-md-9 g-recaptcha" data-sitekey="6Le87qgUAAAAAA91eO824EPaYg9H1mQxhuaGmTQp"></div>
                                </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-default">Register</button>
                            </div>
                        </form>
                    </div>
                    <p class="lead text-center mt-8">Have an Account? <a href="/users/login">Login</a> </p>
                </div>
            </div>

        </div>
    </div> 
