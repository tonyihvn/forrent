    <div class="register-area" style="background-color: rgb(249, 249, 249);">
        <div class="container">

            

            <div class="col-md-8 col-md-offset-2">
                <div class="box-for overflow">
                    <% include ./partials/messages %>
                    
                    <% if(paymentdata){pay = paymentdata  %>
                        <div class="col-md-8">
                            <div class="button-group">
                                <a href="#"  onClick="javascript:history.go(-1)" class="btn btn-warning btn-sm">Back</a>
                                <a href="/users/approve/<%=pay.payid%>" class="btn btn-success btn-sm">Approve</a>
                                <a href="/users/delete/<%=pay.payid%>" class="btn btn-danger btn-sm">Delete</a>
