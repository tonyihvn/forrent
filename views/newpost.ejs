
<div class="page-head"> 
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title">Home >> Admin >> New Post </h1>               
                </div>
            </div>
        </div>
    </div>
    <!-- End page header -->


    <!-- register-area -->
    <div class="register-area" style="background-color: rgb(249, 249, 249);">
        <div class="container">

            <div class="col-md-10 col-md-offset-1">
                <div class="box-for overflow">                         
                    <div class="col-md-12 col-xs-12 login-blocks">
                        <h2>Login : </h2> 
                        <% include ./partials/messages %>

                        <form action="/admin/newpost" method="post">
                            <div class="form-group">
                                <label for="title">Title</label>
                                <input type="text" class="form-control" id="title" name="title" required>
                            </div>
                            <div class="form-group">
                                    <label for="subtitle">Sub-title</label>
                                    <input type="text" class="form-control" id="subtitle" name="subtitle" required>
                            </div>
                            <div class="form-group">
                                    <label for="body">Post Body</label>
                                    <textarea class="form-control" id="body" name="body"></textarea>
                            </div>
                            <div class="form-group">
                                    <label for="featuredimg">Upload Featured Image</label>
                                    <input type="file" class="form-control" id="featuredimg" name="featuredimg" required>
                            </div>
                            <input name="postid" type="hidden" >
                            <input type="hidden" name="author" value="<%=userdata.name userdata.lastname %>">
                            <div class="text-center">
                                <button type="submit" class="btn btn-default"> Publish Content </button>
                            </div>
                        </form>
                        
                    </div>
                    
                </div>
            </div>

        </div>
    </div> 

