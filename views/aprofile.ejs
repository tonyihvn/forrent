    <div class="page-head"> 
        <div class="container">
            <div class="row">
                <div class="page-head-content">
                    <h1 class="page-title"><span class="orange strong"><%= auserdata.name %></span><small>Account Credit: <%=userprofile.credit%></small></h1>               
                </div>
            </div>
        </div>
    </div>
    
    <!-- End page header --> 
        
    <!-- property area -->
    <div class="content-area user-profiel" style="background-color: #FCFCFC;">&nbsp;
        <div class="container">   
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1 profiel-container">
                    <%- include ./partials/messages %>
                    <form action="/users/update-profile" method="post" enctype="application/x-www-form-urlencoded">

                        <input type="hidden" class="form-control" name="userid"  value="<%=auserdata.userid%>">
                        <input type="hidden" class="form-control" name="profileimg"  value="<%=userprofile.profileimg%>">
                        <input type="hidden" class="form-control" name="fullname"  value="<%=auserdata.name%> <%=auserdata.lastname%>">
                        <input type="hidden" name="credit"  value="<%=userprofile.credit%>">
                        <input type="hidden" name="accountstatus"  value="<%=userprofile.accountstatus%>">
                        <div class="profiel-header">
                                
                            <h3>

                                <b>BUILD</b> YOUR PROFILE<br>
                                <small>This information will let other users know more about you.</small>
                            </h3>
                            <hr>
                        </div>

                        <div class="clear">
                            <div class="col-sm-3 col-sm-offset-1">
                                <div class="picture-container">                                    
                                    <div class="picture" data-toggle="modal" data-target="#profilepicmodal">
                                        <img src="<%=userprofile.profileimg%>" class="picture-src"  title=""/>
                                        
                                    </div>
                                    <% if(userprofile.profilecompletion !="Yes"){ %>
                                    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#profilepicmodal">Upload Image</button>
                                    <% } %>
                                </div>
                            </div>

                            <div class="col-sm-3 padding-top-25">

                                <div class="form-group">
                                    <label>First Name <small>(required)</small></label>
                                    <input name="name" type="text" class="form-control" placeholder="Andrew..." value="<%=auserdata.name%>" required>
                                </div>
                                <div class="form-group">
                                    <label>Last Name <small>(required)</small></label>
                                    <input name="lastname" type="text" class="form-control" placeholder="Smith..." value="<%=auserdata.lastname%>" required>
                                </div> 
                                <div class="form-group">
                                    <label>Email <small>(required)</small></label>
                                    <input name="email" type="email" class="form-control" placeholder="e.g. <%=auserdata.email%>" value="<%=auserdata.email%>" disabled>
                                </div> 
                            </div>
                            <div class="col-sm-3 padding-top-25">
                                <div class="form-group">
                                    <label>Password <small>(required)</small></label>
                                    <input name="password" type="password" class="form-control"  value="<%=auserdata.password%>">
                                </div>
                                <div class="form-group">
                                    <label>Confirm password : <small>(required)</small></label>
                                    <input type="password" class="form-control" name="password2"  value="<%=auserdata.password%>">
                                </div>
                                <div class="form-group">
                                    <label>Choose Account Type: </label>
                                    <select name="accounttype" id="accounttype" class="form-control">
                                        <option value="<%=userprofile.accounttype%>" selected><%=userprofile.accounttype%></option>
                                        <option value="User">User</option>
                                        <option value="Agent">Agent</option>
                                    </select>
                                </div>

                                <div class="form-group">
                                    <label>Choose Account Plan: </label>
                                    <select name="accountplan" id="accountplan" class="form-control">
                                        <option value="<%=userprofile.accountplan%>" selected><%=userprofile.accountplan%></option>
                                        <option value="Standard">Standard</option>
                                        <option value="Professional">Professional</option>
                                        <option value="Executive">Executive</option>
                                    </select>
                                </div>
                            </div>  

                        </div>

                        <div class="clear">
                            <br>
                            <hr>
                            <br>
                            <div class="col-sm-5 col-sm-offset-1">
                                <div class="form-group">
                                    <label>Facebook :</label>
                                    <input name="facebook" type="text" class="form-control" value="<%=userprofile.facebook%>" placeholder="https://facebook.com/">
                                </div>
                                <div class="form-group">
                                    <label>Twitter :</label>
                                    <input name="twitter" type="text" class="form-control" value="<%=userprofile.twitter%>"  placeholder="https://twitter.com/">
                                </div>
                                <div class="form-group">
                                    <label>Linkedin :</label>
                                    <input name="linkedin" type="text" class="form-control" value="<%=userprofile.linkedin%>" placeholder="https://linkedin.com/">
                                </div>
                                <div class="form-group">
                                    <label>Instagram :</label>
                                    <input name="instagram" type="text" class="form-control" value="<%=userprofile.instagram%>"  placeholder="https://instagram.com/">
                                </div>
                                
                            </div>  

                            <div class="col-sm-5">
                                <div class="form-group">
                                    <label>Public email :</label>
                                    <input name="pemail" type="email" class="form-control" value="<%=userprofile.pemail%>" value="<%=userprofile.pemail%>">
                                </div>
                                <div class="form-group">
                                    <label>Phone :</label>
                                    <input name="phonenumber" type="text" class="form-control" value="<%=userprofile.phonenumber%>">
                                </div>
                                <div class="form-group">
                                    <label>Contact/Mailing Address :</label>
                                    <input name="address" type="text" class="form-control" value="<%=userprofile.address%>">
                                </div>
                                <div class="form-group">
                                    <label>Website :</label>
                                    <input name="website" type="text" class="form-control" value="<%=userprofile.website%>"  placeholder="https://yoursite.com/">
                                </div>
                            </div>

                            <div class="col-sm-10 col-sm-offset-1 ">
                                <div class="form-group">
                                    <label>General Information About Me / my Company:</label>
                                    <textarea name="generalinfo" id="editor2" class="form-control editor" ><%= userprofile.generalinfo %></textarea>
                                </div>
                            </div>

                        </div>
                
                        <div class="col-sm-5 col-sm-offset-1">
                            <br>
                            <input type='submit' class='btn btn-finish btn-primary' name='finish' value='Update' />
                        </div>
                        <br>
                </form>

            </div>
        </div><!-- end row -->

    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="profilepicmodal" tabindex="-1" role="dialog" aria-labelledby="profilepicmodal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Upload Image</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
            </div>
            <div class="modal-body">
                <form method="post" action="/users/uploadprofilepic" enctype="multipart/form-data">
                    <input type="hidden" name="userid"  value="<%=auserdata.userid%>">    
                
                <div class="form-group row">

                            <div class="picture-container col-sm-6 col-sm-offset-3">
                                <div class="picture">
                                    <img src="/<%=userprofile.profileimg%>" class="picture-src" id="profilepic"  title="<%= auserdata.name +''+ auserdata.lastname %>">
                                    
                                </div>
                            </div>

                  <label class="custom-file">
                    <input type="file" name="profileimg" id="custom-file" placeholder="Upload Picture" class="custom-file-input" aria-describedby="UploadPicture" accept="image/*" onchange="document.getElementById('profilepic').src = window.URL.createObjectURL(this.files[0])">
                    <span class="custom-file-control"></span>
                  </label><br>
                  <small id="UploadPicture" class="form-text text-muted">Please use .jpg or .png file not larger than 100KB</small>
                </div>
                <div class="form-group" style="text-align: center;">
                    
                    <button type="submit" class="btn btn-primary center">Upload Image</button>
                </div>
                

            </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                
            </div>
        </div>
    </div>
</div>